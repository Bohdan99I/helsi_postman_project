    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Login",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{ \"username\": \"testuser\", \"password\": \"testpass\" }"
        },
        "url": {
          "raw": "https://api.helsi.me/api/v1/auth/login",
          "protocol": "https",
          "host": ["api", "helsi", "me"],
          "path": ["api", "v1", "auth", "login"]
        }
      },
      "response": [],
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code is 200\", function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "var jsonData = pm.response.json();",
              "pm.environment.set(\"your_token_here\", jsonData.token);"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Appointments (GET)",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{your_token_here}}" }
        ],
        "url": {
          "raw": "https://api.helsi.me/api/v1/appointments",
          "protocol": "https",
          "host": ["api", "helsi", "me"],
          "path": ["api", "v1", "appointments"]
        }
      },
      "response": [],
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code is 200\", function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "var jsonData = pm.response.json();",
              "if(jsonData.length > 0) {",
              "   pm.environment.set(\"appointmentId\", jsonData[0].id);",
              "}"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Appointment Details (GET)",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{your_token_here}}" }
        ],
        "url": {
          "raw": "https://api.helsi.me/api/v1/appointments/{{appointmentId}}",
          "protocol": "https",
          "host": ["api", "helsi", "me"],
          "path": ["api", "v1", "appointments", "{{appointmentId}}"]
        }
      },
      "response": [],
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code is 200\", function () {",
              "    pm.response.to.have.status(200);",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Create Appointment (POST)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{your_token_here}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"doctorId\": \"12345\",\n  \"patientId\": \"67890\",\n  \"datetime\": \"2025-09-25T10:00:00Z\",\n  \"reason\": \"Консультація\"\n}"
        },
        "url": {
          "raw": "https://api.helsi.me/api/v1/appointments",
          "protocol": "https",
          "host": ["api", "helsi", "me"],
          "path": ["api", "v1", "appointments"]
        }
      },
      "response": [],
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code is 201\", function () {",
              "    pm.response.to.have.status(201);",
              "});",
              "var jsonData = pm.response.json();",
              "pm.environment.set(\"appointmentId\", jsonData.appointmentId);"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
