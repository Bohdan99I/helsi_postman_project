        ],
        "url": {
          "raw": "https://api.helsi.me/api/v1/appointments/{{appointmentId}}",
          "protocol": "https",
          "host": ["api", "helsi", "me"],
          "path": ["api", "v1", "appointments", "{{appointmentId}}"]
        }
      },
      "response": [],
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code is 200 або 204\", function () {",
